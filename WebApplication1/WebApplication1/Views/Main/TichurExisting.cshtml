@using WebApplication1.Models

@{
    ViewBag.Title = "צפייה בתיחורים קיימים";
    Layout = "~/Views/Shared/MainLayout.cshtml";

}
@section Code1
{
    
    var table = $('.tabExcel').DataTable({
    buttons: ['copy', {
    extend: 'excel',
    title: "מערכת שליפת ספקים לתיחור – רשימת משתמשים מורשים" +dstr
    }],
    "oLanguage": {
